<% include ../partials/header %>

	<div class="container ">
		<div class="row justify-content-center">
			<form class="col-sm-10" action="/blog/<%= blog._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" name="blog[title]" value="<%= blog.title %>" class="form-control form-control-lg" />
				</div>
				<div class="form-group">
					<input type="text" name="blog[image]" value="<%= blog.image %>" class="form-control form-control-lg" />
				</div>
				<div class="form-group">
					<textarea class="form-control form-control-lg" name="blog[description]"><%= blog.description %></textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-success" type="submit" value="Update">
					<a href="/blog/<%= blog._id %>" class="btn btn-primary btn-lg">Go Back</a>
				</div>			

			</form>		
		</div>
	</div>
	
<% include ../partials/footer %>