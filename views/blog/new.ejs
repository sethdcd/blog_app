<% include ../partials/header %>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-sm-8">
				<form  action="/blog" method="POST">
					<div class="form-group">
						<input type="text" name="blog[title]" placeholder="Blog Title" class="form-control form-control-lg" />
					</div>
					<div class="form-group">
						<input type="text" name="blog[image]" placeholder="Image URL" class="form-control form-control-lg" />
					</div>
					<div class="form-group">
						<textarea class="form-control form-control-lg" name="blog[description]" placeholder="Blog Entry"></textarea>
					</div>
					<div class="form-group">
						<input class="btn btn-primary btn-lg" type="submit" value="Save Post">
					</div>
				</form>
			</div>
		</div>
	</div>
<% include ../partials/footer %>