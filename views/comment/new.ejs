<% include ../partials/header %>

	<div class="container ">
		<div class="row justify-content-center">
		<form class="col-sm-8" action="/blog/<%= blog._id %>/comment" method="POST">
			<div class="form-group">
				<textarea class="form-control form-control-lg" name="comment[content]" placeholder="Enter Comment"></textarea>
			</div>
			<div class="form-group">
				<input type="text" name="comment[author]" placeholder="Author's Name" class="form-control form-control-lg" />
			</div>		
			<div class="form-group">
				<input class="btn btn-success btn-lg" type="submit" value="Add Comment">
				<a href="/blog/<%= blog._id %>" class="btn btn-primary btn-lg">Go Back</a>
			</div>
		</form>
		</div>
	</div>
	
<% include ../partials/footer %>